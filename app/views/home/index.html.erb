<div class="container">
  <%= link_to '+ Add new schedule', new_post_path, class:"btn btn-primary"%>
</div>

<div class="container">
	<table class="table">
    <caption><p class="lead">All Tasks</p></caption>
		<tr>
			<th class="span1"><strong>#</strong></th>
			<th class="span2"><strong>任务</strong></th>
			<th class="span6"><strong>明细</strong></th>
			<th class="span2"><strong>操作</strong></th>
		</tr>
		<% temp = 1 %>
		<% @post.each do |post| %>
		<tr>
			<td class="text-center"><%= temp %></td>
			<td><%= post.title %></td>
			<td><%= post.text %>
				<% if post.status.to_s == 't' %>
					<%= link_to '#', class:"label label-success" do %>
						<span>Done</span>
					<% end %>
				<% else %>
					<%= link_to '#', class:"label label-unsuccess" do %>
						<span>Undone</span>
					<% end %>
				<% end %>
			</td>
			<td>
				<% if post.status == 'f' %>
					<%= link_to "完成", 'posts/'+post.id.to_s+'/done' %>
				<% else %>
					<%= link_to "进行",'posts/'+post.id.to_s+'/undone' %>
				<% end %> | 
				<%= link_to "编辑", edit_post_path(post.id) %> | 
				<%= link_to "删除", post_path(post), method: :delete %></td>
		</tr>
		<% temp += 1 %>
		<% end %>
	</table>
</div>

