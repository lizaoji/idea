<h1>This is ben's brain storming page</h1>
<p><%= link_to 'Add new ideas', new_post_path %></p>
<table border = 1>
	<tr>
		<th>序号</th>
		<th>点子</th>
		<th>详细内容</th>
		<th>操作</th>
	</tr>
	<% temp = 1 %>
	<% @post.each do |post| %>
	<tr>
		<td><%= temp %></td>
		<td><%= post.title %></td>
		<td><%= post.text %></td>
		<td><%= link_to "edit", edit_post_path(post.id) %> | 
			<%= link_to "delete", post_path(post), method: :delete %></td>
	</tr>
	<% temp += 1 %>
	<% end %>
</table>

